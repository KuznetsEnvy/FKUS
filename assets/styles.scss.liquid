  background-color: white;
  text-align: center;
  padding: 7%;
  position: relative;
  margin: 0 auto;
  width: 100%;
  height: 80%;
  @include desktop {
    width: 46vw;
    height: 34vw;
    padding: 2vw 3vw;
  }

  .popup-close-btn {
    font-weight: 400;
    font-size: 1.2vw;
    text-decoration: underline;
    cursor: pointer;

    &.bottom {
      margin: 1vw 0 0;
      display: inline-block;
      font-size: 1vw;

      @media #{$mobile} {
        margin: 7vw 0 0;
        font-size: 4vw;
      }
    }
    &.top {
      display: flex;
      justify-content: center;
      align-items: center;
      position: absolute;
      top: 20px;
      right: 20px;
      width: 30px;
      height: 30px;
      z-index: 23;
      text-decoration: none;
      padding: 0px;
      border-radius: 15px;
      box-shadow: 0px 0px 0px 0px rgba(50, 50, 50, 0.75);
      font-size: 18px;
    }
  }

  #mc_embed_signup {
    height: 100%;

    form {
      height: 100%;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
    }

    .mce_inline_error {
      margin: 0;
    }
  }

  h2 {
    color: #58c8b2;
    font-family: "Have Heart One", sans-serif;
    font-size: 14vmin;
    font-weight: 400;
    margin: 0;

    @include desktop {
      font-size: 4vw;
    }
  }
  .popup-message {
    font-size: 5.5vmin;
    line-height: 1.5em;
    max-width: 20em;
    margin: 0 auto;

    @include desktop {
      font-size: 1.6vw;
    }
    span {
      color:#f472b1;
      font-weight: 500;
    }
  }


  #mc_embed_signup_scroll {
    width: 30vw;
    margin: 0 auto;

    @include mobile-only {
      width: 80vw;
    }
  }

  #mce-error-response {
    color: red;
  }
  #mce-success-response {
    color: green;
  }
  input {
    opacity: 1;
    width: 100%;
    height: 2em;
    font-family: Arial, Helvetica;
    font-size: 5.4vmin;
    text-align: center;
    color: #000000;
    background-color: white;
    border: 2px solid rgba(128,128,128,1);
    border-radius: 3px;
    box-shadow: 0px 0px 0px 0px rgba(50, 50, 50, 0.75);
    padding: 0px 5px;
    margin: 0.3vw 0;

    @include desktop {
      font-size: 1.3vw;
    }
  }
  #mc-embedded-subscribe {
    letter-spacing: 0.05em;
    font-weight: bold;
    color: #aee9d8;
    background-color: black;
    text-transform: uppercase;
  }
}

