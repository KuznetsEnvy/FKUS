//region Variables
$mobile: "screen and (max-width: 767px)";
$desktop: "screen and (min-width: 768px)";
$tablet-width: 768px;
//endregion
//region Mixins
@mixin mobile-only {
  @media (max-width: #{$tablet-width - 1px}) {
    @content;
  }
}
@mixin desktop {
  @media (min-width: #{$tablet-width}) {
    @content;
  }
}
//endregion
//region Fonts
@font-face {
  font-family: "Have Heart One";
  font-weight: 400;
  src: url("{{ 'Have Heart One.ttf' | asset_url | split:'?' | first }}") format("truetype");
}

@font-face {
  font-family: "Brandon Grotesque";
  font-weight: 400;
  src: url("{{ 'brandon-grotesque-regular.otf' | asset_url | split:'?' | first }}") format("opentype");
}

@font-face {
  font-family: "Brandon Grotesque";
  font-weight: 500;
  src: url("{{ 'brandon-grotesque-medium.otf' | asset_url | split:'?' | first }}") format("opentype");
}

@font-face {
  font-family: "Brandon Grotesque";
  font-weight: 700;
  src: url("{{ 'brandon-grotesque-bold.otf' | asset_url | split:'?' | first }}") format("opentype");
}
//endregion

* {
  box-sizing: border-box;
}
html {height: 100%;}
body {height: 100%; display: flex; align-items: center;}
.wufoo-form-container {
  height: 100%;
}
form.wufoo {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  font-family: "Brandon Grotesque";
  font-size: 26px;
  line-height: normal;

  h2 {
    color: #58c8b2 !important;
    font-family: "Have Heart One", sans-serif !important;
    font-size: 68px !important;
    margin: 0.3em !important;
    padding: 0 !important;

    @include desktop {
      margin: 0.3em 0 !important;
    }
  }

  input.text, textarea.textarea, input.file, select.select {
    font-style: inherit;
    font-weight: inherit;
    color: inherit;
    font-size: 15px;
  }

  header.info {
    padding: 0 1% 0.5em 1%;


    & > h2 {
      display: none;
    }
    div {
      max-width: 20em;
      margin: 0 auto;
      p {
        margin: 0 auto;
        @include mobile-only {
          font-size: 80%;
          padding: 0 1em;
        }
        span {
          color: #f472b1;
          font-weight: 500;
        }
      }
    }
  }

  ul {
    width: 80vw;
  }
  li {
    padding: 0;
  }

  #saveForm {
    font-size: 15px;
    letter-spacing: 0.05em;
    font-weight: bold;
    color: #aee9d8;
    background-color: black;
    text-transform: uppercase;
  }
  input {
    opacity: 1;
    text-align: center;
    color: #000000;
    font-family: Arial, Helvetica;
    font-size: 16px;
    border-style: solid;
    padding: 0px 5px;
    border-radius: 3px;
    box-shadow: 0px 0px 0px 0px rgba(50, 50, 50, 0.75);
    background-color: rgba(255, 255, 255, 1);
    border-width: 2px;
    border-color: rgba(128, 128, 128, 1);
    width: 500px;
    height: 55px;
    margin: 0.5vw 0;

    @media (max-width: 767px) {
      width: 80vw;
    }
  }

  label.desc {
    display: none;
  }
}